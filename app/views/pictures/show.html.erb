<p id="notice"><%= notice %></p>

<p>
  <strong>Contents:</strong>
  <%= @picture.content %>
</p>

<p>
  <strong>Picture:</strong>
  <%= image_tag @picture.image.url %>
</p>

<p>
  <strong>name:</strong>
  <%= @picture.user.name %>
</p>

<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'Favo★TheEnd', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'Favo★ru', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<% if @picture.user_id == current_user.id %>
  <%= link_to 'Edit', edit_picture_path %> <%= link_to 'Info', pictures_path %> <%= link_to 'BYE!!!MyStory', @picture, method: :delete, data: { confirm: 'Is it okay to delete?' } %>
<% else %>
  <%= link_to 'Info', pictures_path %>
<% end %>

